{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
    "template": "{{ .Shell }}> ",
    "foreground": "#ffffff",
    "background": "transparent"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "options": {
            "cache_duration": "none"
          },
          "template": "{{ .Name }}",
          "foreground": "#26C6DA",
          "type": "shell",
          "style": "plain"
        },
        {
          "options": {
            "cache_duration": "none",
            "root_icon": "root"
          },
          "template": " <#757575,>as</> \uf0e7",
          "foreground": "#ff8080",
          "type": "root",
          "style": "plain"
        },
        {
          "options": {
            "cache_duration": "none",
            "time_format": "15:04:05"
          },
          "template": " <#757575,>|</> {{ .CurrentDate | date .Format }}",
          "foreground": "#689f38",
          "type": "time",
          "style": "plain"
        },
        {
          "options": {
            "cache_duration": "none",
            "charged_icon": "\ue22f ",
            "charging_icon": "\ue234 ",
            "discharging_icon": "\ue231 "
          },
          "template": " {{ if not .Error }}{{ .Icon }}{{ .Percentage }}{{ end }}{{ .Error }}\uf295 \uf583 ",
          "foreground": "#26C6DA",
          "type": "battery",
          "style": "powerline",
          "foreground_templates": [
            "{{ if eq \"Full\" .State.String }}#4caf50{{ end }}",
            "{{ if eq \"Charging\" .State.String }}#40c4ff{{ end }}",
            "{{ if eq \"Discharging\" .State.String }}#ff5722{{ end }}"
          ]
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "options": {
            "cache_duration": "none",
            "macos": "mac"
          },
          "template": "\u250c {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "foreground": "#26C6DA",
          "type": "os",
          "style": "plain"
        },
        {
          "options": {
            "cache_duration": "none",
            "display_host": false
          },
          "template": " {{ if .SSHSession }}\ueba9 {{ end }}{{ .UserName }} ",
          "foreground": "#757575",
          "type": "session",
          "style": "plain"
        },
        {
          "options": {
            "cache_duration": "none",
            "style": "folder"
          },
          "template": " {{ .Path }} ",
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "background": "#91ddff",
          "type": "path",
          "style": "powerline"
        },
        {
          "options": {
            "branch_ahead_icon": "\u2191",
            "branch_behind_icon": "\u2193",
            "branch_gone": "\u2262",
            "branch_icon": "\ue0a0 ",
            "branch_identical_icon": "\u2261",
            "cache_duration": "none",
            "cherry_pick_icon": "âœ“ ",
            "commit_icon": "\u25b7 ",
            "merge_icon": "\u25f4 ",
            "no_commits_icon": "[no commits]",
            "rebase_icon": "\u2c62 ",
            "tag_icon": "\u25b6 "
          },
          "template": " {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}{{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} \u2502{{ end }}{{ if .Staging.Changed }}{{ .Staging.String }}{{ end }} ",
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "background": "#95ffa4",
          "type": "git",
          "style": "powerline",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ff9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f26d50{{ end }}",
            "{{ if gt .Ahead 0 }}#f17c37{{ end }}",
            "{{ if gt .Behind 0 }}#89d1dc{{ end }}"
          ]
        },
        {
          "options": {
            "cache_duration": "none"
          },
          "template": " {{ .WorkspaceName }}{{ if .Version }} {{ .Version }}{{ end }} ",
          "foreground": "#100e23",
          "powerline_symbol": "\ue0b0",
          "background": "#ffee58",
          "type": "terraform",
          "style": "powerline"
        },
        {
          "options": {
            "cache_duration": "none"
          },
          "template": " {{ if gt .Code 0 }}error{{ else }}\uf42e{{ end }} ",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "background": "#ff8080",
          "type": "exit",
          "style": "powerline"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "options": {
            "cache_duration": "none"
          },
          "template": "\u2514",
          "foreground": "#26C6DA",
          "type": "text",
          "style": "plain"
        },
        {
          "options": {
            "cache_duration": "none"
          },
          "template": "$",
          "foreground": "#26C6DA",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 4,
  "final_space": true
}
